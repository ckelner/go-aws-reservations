##########################################################################
############# CONFIGURATION ##############################################
##########################################################################

provider "aws" {
  region = "${var.aws_region}"
}

module "vpc" {
  source = "github.com/terraform-community-modules/tf_aws_vpc?ref=v1.0.3"
  name = "kelnerhax"
  cidr = "10.0.0.0/16"
  public_subnets  = ["10.0.1.0/24"]
  enable_nat_gateway = "false"
  azs = ["us-east-1a"]
  tags {
    "Terraform" = "true"
  }
}

##########################################################################
############# VARIABLES ##################################################
##########################################################################

variable "aws_region" {
  default = "us-east-1"
}
